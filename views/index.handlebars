<div class="container">
    <div class="row">
        <div class="col-md">

            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Lets Eat Some Burger's</h1>
                </div>
            </div>
            
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <h5 class="card-header">
                    Burgers to be devoured
                </h5>
                <div class="card-body">
                    <ul>
                    {{#each burgers}}
                       {{#unless devoured}}
                          <p>{{id}}. {{burger_name}}</p>
                          <button class="devoured" data-id="{{id}}">EAT ME</button>
                        {{/unless}}
                    {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card">
                <h5 class="card-header">
                    Burgers to be devoured
                </h5>
                <div class="card-body">
                    <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            <p>{{id}}. {{burger_name}}</p>
                        {{/if}}
                    {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="Burger">Type Of Burger:</label>
                    <input type="text" id="burger" name="name">
                </div>
                <button type="submit">Burger</button>
            </form>
        </div>
    </div>
</div>




